{
  "name": "playbookchat",
  "version": "1.2.0",
  "private": true,
  "engines": {
    "node": "^14.17.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "mongodb": "^3.6.9",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "react-images-uploading": "^3.1.2",
    "webpack-cli": "^4.7.2"
  },
  "scripts": {
    "start": "if [[ ${NODE_ENV} == \"production\" ]]; then npm run start:prod; else npm run start:dev;",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"node server.js\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild":  "cd client && npm install && npm run build"
  },
  "author": "Isabel Ngan",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.2",
    "nodemon": "^2.0.9"
  },
  "heroku-run-build-script": true
}
